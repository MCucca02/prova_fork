{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc compila il file attivo",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/*.c",
                "${workspaceFolder}/*.h",
                "-o",
                "${workspaceFolder}/${workspaceFolderBasename}",
                "-lncurses"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },            
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Attivit√† generata dal debugger."
        }
    ],
    "version": "2.0.0"
}